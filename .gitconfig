[user]
	name = HoverHell
	email = hoverhell@gmail.com
	signingkey = hoverhell@localhost

[core]
	excludesfile = ~/.gitignore

[alias]
	# Mostly replaced by shellscripts 'gi*', but w/e
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	# # # This used to be relevant with older `git`, but not anymore.
	# # # http://stackoverflow.com/questions/948354/git-push-current-branch
	# # Push only current branch.
	# pub = "!f() { git push -u ${1:-origin} `git symbolic-ref HEAD`; }; f"
	# # Untested:
	# pub = push
	# push = "!f() { git push -u ${1:-origin} `git symbolic-ref HEAD`; }; f"
	# # Also can do:
	# #  git config --global push.default current
	# #  git config --global push.default upstream

# ## Colorful
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[push]
	default = simple
[http]
	postBuffer = 1048576000
[commit]
	gpgsign = true
