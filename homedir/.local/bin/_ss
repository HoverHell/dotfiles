#!/bin/sh
## Repetitive ssh-rescreen
if [ x"$1" = x"-x" ]; then
    screenx=1
    shift 1
fi

if [ $screenx ]; then
    sargs="-x"
else
    sargs="-D -R"
fi

exec "$HOME/.local/bin/_s" "$@"  -t "export LANG=en_US.utf-8; .local/bin/rescreen $sargs || cd && screen $sargs -S happs"  # `-X` is not completely safe
